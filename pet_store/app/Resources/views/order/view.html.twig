{% extends 'base.html.twig' %}

{% block main %}

<div class="row">
    <div class="col-xs-12">
        <div class="panel">
            <div class="panel-heading">
                <div class="row">                    
                    <div class="col-xs-6">
                        {% if order != null %}
                        <h3>Order â„–{{ order.id }}</h3>
                        <h5>from {{ order.orderDate}}</h5>                        
                        {% else %}
                        <h3>No added animals here.</h3>
                        {% endif %}
                    </div>
                </div>
                <hr>
            </div>
            {% if order != null %}
            <div class="panel-body">								
                <div class="order-details">
                    <table class="last-order">
                        <col width="40%">
                        <col width="5%">
                        <col width="10%">
                        {% set total = 0 %}
                        {% for animal in animals %}                        
                        <tr>
                            <td>
                               {{ animal.name}} {{ animal.breed}} 
                            </td>
                            <td>
                                -->
                            </td>
                            <td class="col-price">
                               ${{ animal.price}} 
                               {% set total = total + animal.price %}                               
                            </td>
                        </tr>
                        {% endfor %}
                        <tr>
                            <td colspan="3" class="total-price">
                                Total: ${{ total }} 
                            </td>
                        </tr>
                    </table>  
                    <div class="btn-order-finish">
                        <a class="btn btn-primary btn-xs" href="{{ path('order_finish', {'id':order.id}) }}">Finish</a>
                    </div>
                </div>
            </div>
            {% endif %}
        </div>
    </div>    
</div>

{% endblock %}