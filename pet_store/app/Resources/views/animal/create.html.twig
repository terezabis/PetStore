{% extends 'base.html.twig' %}

{% block main %}

<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <div class="panel panel-login">
            <div class="panel-heading">
                <div class="row">
                    <div>
                        <h3>Create new animal</h3>
                    </div>
                </div>
                <hr>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-12">

                        <form enctype="multipart/form-data" action="{{ path('animal_create') }}" method="POST">
                            <div class="form-group">
                                <label for="animal_name" class="form-label">Name</label>
                                <input type="text" id="animal_name" name="animal[name]" tabindex="1" class="form-control" placeholder="Name" value="">
                            </div>
                            <div class="form-group">
                                <label for="animal_breed" class="form-label">Breed</label>
                                <input type="text" id="animal_breed" name="animal[breed]" tabindex="1" class="form-control" placeholder="Breed" value="">
                            </div>
                            <div class="form-group">
                                <label for="animal_color" class="form-label">Main color</label>
                                <input type="text" id="animal_color" name="animal[color]" tabindex="1" class="form-control" placeholder="Main color" value="">
                            </div>
                            <div class="form-group">
                                <label class="radio-inline"><input type="radio" name="animal[gender]" tabindex="1" value="0">Male</label>
                                <label class="radio-inline"><input type="radio" name="animal[gender]" tabindex="1" value="1">Female</label>
                            </div>
                            <div class="form-group">
                                <label for="animal_description" class="form-label">Description</label>
                                <textarea  id="animal_description" name="animal[description]" tabindex="1" class="form-control" rows="5"></textarea>
                            </div>
                            <div class="form-group">
                                <label for="animal_price" class="form-label">Price</label>
                                <input type="number" id="animal_price" name="animal[price]" tabindex="1" class="form-control" placeholder="Price" value="">
                            </div>
                            <div class="form-group">
                                <label for="animal_image" class="form-label">Image URL</label>
                                <input type="text" id="animal_image" name="animal[image]" tabindex="1" class="form-control" placeholder="URL" value="">
                            </div>
                            <div class="form-group">
                                <label for="animal_category" class="form-label">Category</label>
                                <select class="form-control" id="animal_category">
                                    <option selected  disabled>- Select -</option>
                                    <option>Кучета и котки</option>
                                    <option>Гризачи</option>
                                    <option>Птици</option>
                                    <option>Влечуги</option>
                                    <option>Риби</option>
                                </select>
                            </div>
                            <div class="form-check">
                                <input type="checkbox" class="form-check-input" id="animal_inStock" name="animal[inStock]" checked="">
                                <label class="form-check-label" for="animal_inStock">In stock</label>
                            </div>
                            {{ form_row(form._token) }}
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-sm-6 col-sm-offset-3">
                                        <input type="submit" tabindex="4" class="form-control btn btn-primary" value="Create">
                                    </div>
                                </div>
                            </div>									
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 



{% endblock %}