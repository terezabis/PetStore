{% extends 'base.html.twig' %}

{% block main %}


<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <div class="panel panel-login">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-xs-6">
                        <h3>Log In</h3>                        
                    </div>
                </div>
                <hr>
                <h6>or <a href="{{ path('user_register') }}"><b>Register</b></a> now</h6>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-12">

                        <form name="authenticate" action="{{ path('security_login')}}" method="post">
                            <div class="form-group">
                                <label for="email">Email address</label>
                                <input type="text" name="_username" tabindex="1" class="form-control" placeholder="Email Address" value="">										
                            </div>
                            <div class="form-group">
                                <label for="email">Password</label>
                                <input type="password" name="_password" tabindex="2" class="form-control" placeholder="Password">										
                            </div>
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"/>
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-sm-6 col-sm-offset-3">
                                        <input type="submit" name="login-submit" id="login-submit" tabindex="4" class="form-control btn btn-primary" value="Log In">
                                    </div>
                                </div>
                            </div>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 
{% endblock %}