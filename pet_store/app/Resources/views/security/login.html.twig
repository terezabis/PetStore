{% extends 'base.html.twig' %}

{% block main %}
<form name="authenticate" action="{{ path('security_login')}}" method="post">
    <div class="form-group">
        <label for="email">Email address</label>
        <input type="email" class="form-control" id="email" name="_username" placeholder="Enter email">
    </div>
    <div class="form-group">
        <label for="password">Password</label>
        <input type="password" class="form-control" id="password" name="_password" placeholder="Password">
    </div>
    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"/>
    <div class="form-check"> 
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>

</form>
{% endblock %}