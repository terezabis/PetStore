{% extends 'base.html.twig' %}

{% block main %}

<div class="container body-content">
    <div class="row">
        <div class="col-md-10 col-md-offset-1">
                <div class="panel-heading">
                    <div>
                        <h3>Categories</h3>
                    </div>
                </div>
                <hr>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-10 col-md-offset-1">                        
                        <table class="categories-table">
                            {% for category in categories %}
                            {% if category.animals|length > 0 %}
                            <tr>
                                <td>
                                    <h4><a class="link_category" href="{{ path('animal_category', {'id':category.id}) }}">{{ category.name }}</a></h4>
                                </td>
                                <td>
                                    <div class="animals_count">{{ category.animals|length }}</div>                                    
                                </td>
                                {% if is_granted('ROLE_ADMIN') %}
                                <td>
                                    <a class="btn btn-primary btn-xs" href="{{ path('category_edit', {'id':category.id}) }}">Edit</a>
                                </td>
                                {% else %}
                                <td>
                                    &nbsp;
                                </td>
                                {% endif %}
                            </tr>
                            {% endif %}
                            {% endfor %}
                        </table>  
                    </div>    
                </div>                
            </div>
        </div>
    </div>
</div>


{% endblock %}

