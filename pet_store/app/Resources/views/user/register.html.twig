{% extends 'base.html.twig' %}

{% block main %}

{% for msg in app.session.flashbag.get('info') %}
<div class="alert alert-danger">
    <a href="#" class="close" data-dismiss="alert" aria-label="close">Ã—</a>
    {{ msg }}
</div>
{% endfor %}

<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <div class="panel panel-login">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-xs-6">
                        <h3>Register</h3>
                    </div>
                </div>
                <hr>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-12">

                        <form class="form-horizontal" method="post">	
                            {{ form_errors(form) }}
                            <div class="form-group">
                                <label for="user_email" class="control-label">Email</label>
                                {{ form_row(form.email, { 'attr': {'class': 'form-control'} }) }}
                            </div>
                            <div class="form-group">
                                {{ form_row(form.password) }}
                            </div>
                            <div class="form-group">
                                <label for="user_firstName" class="control-label">First name</label>
                                {{ form_row(form.firstName, { 'attr': {'class': 'form-control'} }) }}
                            </div>
                            <div class="form-group">
                                <label for="user_lastName" class="control-label">Last name</label>
                                {{ form_row(form.lastName, { 'attr': {'class': 'form-control'} }) }}
                            </div>
                            <div class="form-group">
                                <label for="user_phone" class="control-label">Phone number</label>
                                {{ form_row(form.phone, { 'attr': {'class': 'form-control'} }) }}
                            </div>
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-sm-6 col-sm-offset-3">
                                        <input type="submit" name="register" id="register" tabindex="4" class="form-control btn btn-primary" value="Register Now">
                                    </div>
                                </div>
                            </div>
                            {{  form_row(form._token) }}
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 

{% endblock %}